<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:minWidth="@dimen/about_dialog_width"
    android:layout_height="match_parent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_main"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:contentDescription="@string/eds"/>

                <TextView
                    android:id="@+id/about_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:inputType="none"
                    android:text="@string/eds"
                    android:textSize="20sp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:inputType="none"
                    android:text="@string/donation_notice"
                    android:textSize="14sp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"/>

                <Button
                    android:id="@+id/donation_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/make_a_donation"
                    style="?android:attr/buttonStyle"
                    android:layout_marginTop="1dp"/>
                <Button
                    android:id="@+id/check_full_version_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/check_the_full_version"
                    style="?android:attr/buttonStyle"
                    android:layout_marginTop="1dp"/>
                <Button
                    android:id="@+id/check_source_code_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/check_source_code"
                    style="?android:attr/buttonStyle"
                    android:layout_marginTop="1dp"/>
                <Button
                    android:id="@+id/show_version_history_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/version_history"
                    style="?android:attr/buttonStyle"
                    android:layout_marginTop="1dp"/>
                <Button
                    android:id="@+id/contact_support_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/contact_support"
                    style="?android:attr/buttonStyle"
                    android:layout_marginTop="4dp"/>
                <Button
                    android:id="@+id/get_program_log"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/get_program_log"
                    style="?android:attr/buttonStyle"
                    android:layout_marginTop="4dp"/>
        </LinearLayout>
</ScrollView>