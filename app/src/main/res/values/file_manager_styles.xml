<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="FileName">
		<item name="android:textSize">@dimen/main_text</item>
        <item name="android:textColor">?attr/mainTextColor</item>
        <item name="android:layout_width">0dp</item>
		<item name="android:layout_height">wrap_content</item>
    </style>
    <style name="FileIcon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:scaleType">center</item>
        <item name="android:contentDescription">@string/select_file</item>
    </style>
    <style name="FileDesc">
    	<item name="android:textSize">10sp</item>
		<item name="android:textColor">?attr/secTextColor</item>
        <item name="android:layout_width">0dp</item>
		<item name="android:layout_height">wrap_content</item>
    </style>
    <style name="MiniIcon">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
    </style>
    <style name="RowButton.Check" parent="@style/CheckboxStyle" >
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text"/>
    </style>
    <style name="RowButton.Check.Dark" parent="@style/CheckboxStyle.Dark" >
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text"/>
    </style>
    <style name="RowButton.Radio" parent="@style/RadioButtonStyle">
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text"/>
    </style>
    <style name="RowButton.Radio.Dark" parent="@style/RadioButtonStyle.Dark">
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text"/>
    </style>
    <style name="StartFileIcon">
        <item name="android:contentDescription">@string/open_file</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:src">@drawable/ic_play</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="FileList" parent="android:Widget.Holo.Light.ListView" />
    <style name="FileList.Dark" parent="android:Widget.Holo.ListView" />
    <style name="FileListRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/file_list_row_height</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>
    </style>
    <style name="SelectedFileEditText">
        <item name="android:textColor">?attr/mainTextColor</item>
        <item name="android:textSize">@dimen/main_text</item>
       	<item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
       	<item name="android:inputType">text</item>
       	<item name="android:lines">1</item>
       	<item name="android:maxLines">1</item>
       	<item name="android:layout_margin">2dp</item>
    </style>
    <style name="MainFrame">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.5</item>
    </style>
    <style name="SecondaryFrame">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.5</item>
    </style>
</resources>
